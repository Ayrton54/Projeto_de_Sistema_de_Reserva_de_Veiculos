@model List<Projeto.Models.Carro>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">
        @TempData["MensagemErro"]
    </div>
}

<header>
    <button type="button" onclick="window.location.href='@Url.Action("Logout", "Account")'" class="btn-sair">
        Sair
    </button>
</header>

<div class="reserva-container">

    <h2>Reservar Veículo</h2>
    <form asp-action="ConfirmarReserva" method="post">
        <div>
            <label for="dataInicio">Data Início:</label>
            <input type="date" id="dataInicio" name="dataInicio" required />
        </div>
        <div>
            <label for="dataFim">Data Fim:</label>
            <input type="date" id="dataFim" name="dataFim" required />
        </div>
        <table>
            <thead>
                <tr>
                    <th>Modelo</th>
                    <th>Ano</th>
                    <th>Características</th>
                    <th>Valor Diária</th>
                    <th>Confirmar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var carro in Model)
                {
                    <tr>
                        <td>@carro.Modelo</td>
                        <td>@carro.Ano</td>
                        <td>@carro.Caracteristicas</td>
                        <td>R$ @carro.ValorDiaria</td>
                        <td>
                            <button type="submit" name="carroId" value="@carro.Id">Reservar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>
